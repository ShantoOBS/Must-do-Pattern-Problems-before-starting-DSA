#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    
    for(int i=1;i<=n;i++){
        
       if(i==1){
           for(int j=1;j<=n;j++){
               cout<<j;
           }
           cout<<endl;
       }
       
       else if(i==n){
           for(int j=n;j>=1;j--){
               cout<<j;
           }
           cout<<endl;
       }
       
       else{
           
           for(int j=1;j<=n;j++){
               if(j==1){
                   cout<<i;
               }
               else if(j==n){
                   cout<<(n-i)+1<<endl;
               }
               else{
                   cout<<" ";
               }
           }
       }
    
    }
    
}
